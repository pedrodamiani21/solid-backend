{
  "compilerOptions": {
    "target": "es6",                              
    "module": "commonjs",     
    "allowJs":true,                  
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",
    "strict": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "skipLibCheck": true
    },                         
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
